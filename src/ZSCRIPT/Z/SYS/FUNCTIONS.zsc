extend
class ZManager{
    ZMatrix2 P2M,
            M2E;

    ZMatrix2 Pers2Mood(ZMatrix2 OCEAN){
        if(!P2M){
            // Transformation Matrix: Personality -> Mood
            static const double StaticP2M[]={
                 0,   0,  .21,  .59,  .19,
                .15,  0,   0,   .3,  -.57,
                .25, .17, .6,  -.32,   0
            };
            P2M=ZMatrix2.Create(ZMood.DIMENSIONCOUNT, ZPersonality.DIMENSIONCOUNT);
            for(int i=0; i<StaticP2M.Size(); i++)
                P2M.Values[i]=Clamp(StaticP2M[i], -1, 1);
        }
        return P2M.MMultiply(OCEAN);
    }
}