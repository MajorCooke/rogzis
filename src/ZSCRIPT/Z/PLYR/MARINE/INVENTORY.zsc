extend
class ZPlayer{
	virtual
	clearscope
	int, int GetPlate(){
		int Durability, MaxDurability,
			d,		md;
		for(int i=0; i<Stats.MArmor.Size(); i++)
			if(Stats.MArmor[i]){
				[d, md]=Stats.MArmor[i].GetDurability();
				Durability+=d;
				MaxDurability+=md;
			}
		return Durability, MaxDurability;
	}
	
	virtual
	clearscope
	int, int GetEnergy(){
		int Energy, MaxEnergy,
			e,		me;
		for(int i=0; i<Stats.MArmor.Size(); i++)
			if(Stats.MArmor[i]){
				[e, me]=Stats.MArmor[i].GetEnergy();
				Energy+=e;
				MaxEnergy+=me;
			}
		return Energy, MaxEnergy;
	}
	
	virtual
	clearscope
	int, int GetMagnet(){
		int Magnet, MaxMagnet,
			m,		mm;
		for(int i=0; i<Stats.MArmor.Size(); i++)
			if(Stats.MArmor[i]){
				[m, mm]=Stats.MArmor[i].GetMagnet();
				Magnet+=m;
				MaxMagnet+=mm;
			}
		return Magnet, MaxMagnet;
	}
	
	virtual
	clearscope
	int, int GetShield(){
		int Shield, MaxShield,
			s,		ms;
		for(int i=0; i<Stats.MArmor.Size(); i++)
			if(Stats.MArmor[i]){
				[s, ms]=Stats.MArmor[i].GetShield();
				Shield+=s;
				MaxShield+=ms;
			}
		return Shield, MaxShield;
	}
	
	virtual
	clearscope
	int, int GetLight(){
		int Light, MaxLight,
			l,		ml;
		for(int i=0; i<Stats.MArmor.Size(); i++)
			if(Stats.MArmor[i]){
				[l, ml]=Stats.MArmor[i].GetLight();
				Light+=l;
				MaxLight+=ml;
			}
		return Light, MaxLight;
	}
	
	virtual
	void DrainEnergy(int Amount){
		if(Amount<=0)return;
		for(int i=0; i<Stats.MArmor.Size(); i++)
			if(Stats.MArmor[i] && Stats.MArmor[i].GetEnergy()>0){
				Stats.MArmor[i].DrainEnergy(Amount, self);
				return;
			}
	}

	override
	int DamageMobj(Actor Inflictor, Actor Source, int Damage, Name Mod, int Flags=0, double Angle=0){
		for(int i=0; i<Stats.MArmor.Size(); i++)
			if(Stats.MArmor[i] && Stats.MArmor[i].GetEnergy()>0)
				Damage=Stats.MArmor[i].ModifyDamage(Damage, Mod);
		Damage=super.DamageMobj(Inflictor, Source, Damage, Mod, Flags, Angle);
		return Damage;
	}
}