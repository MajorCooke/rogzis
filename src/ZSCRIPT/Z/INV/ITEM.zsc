class ZItems:ZRegistry{
    bool Add(ZItem Item)
    {return Item && super.Add(Item);}

    ZItem Get(Name Name) const
    {return ZItem(super.Get(Name));}

    ZItem GetRand() const
    {return ZItem(super.GetRand());}
}

class ZItem:ZRegistryItem play{
    int Price;

    String Description;

    virtual
    void Tick(ZPlayer Player, PlayerInfo PlayerInfo){}

    clearscope
    int GetPrice() const
    {return Price;}

    clearscope
    String GetDesc() const
    {return Description;}
}